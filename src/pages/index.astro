---
// Diné Insurance Homepage
import BaseLayout from '@layouts/BaseLayout.astro';
import Navbar from '@components/ui/Navbar.astro';
import Hero from '@components/sections/Hero.astro';
import BlogPreview from '@components/sections/BlogPreview.astro';
import ContactForm from '@components/sections/ContactForm.astro';
import Footer from '@components/sections/Footer.astro';

const pageTitle = 'Diné Insurance - Protecting What Matters. Honoring Who You Are.';
const pageDescription = 'Trusted insurance solutions for the Diné people. We understand the land, the people, and the traditions that make us strong. Our coverage protects more than just property — it protects legacy, family, and future generations.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Navigation -->
  <Navbar logo="Diné Insurance" />
  
  <!-- Main Content -->
  <main class="flex-1">
    <!-- Hero Section -->
    <Hero 
      title="Walking Beside You on the Path of Hózhó"
      subtitle="At Diné Insurance, we protect more than policies — we protect families, homes, and futures with the wisdom of our ancestors and the strength of our traditions. Insurance rooted in K'é, respect, and sacred trust."
      ctaText="Get Your Quote"
      ctaLink="/contact"
      secondaryCtaText="Our Services"
      secondaryCtaLink="/services"
    />
    
    <!-- Services Preview Section -->
    <section class="section-spacing bg-sand/30">
      <div class="container-padding">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-earth-brown mb-4">
            Protection for Every Sacred Direction
          </h2>
          <p class="text-lg text-earth-brown/70 max-w-3xl mx-auto">
            From the Four Sacred Mountains to your doorstep, we bring you comprehensive insurance 
            coverage that honors your traditions and protects your future.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Auto Insurance -->
          <div class="bg-soft-white rounded-lg p-6 shadow-soft hover:shadow-medium transition-shadow">
            <div class="w-12 h-12 bg-turquoise/20 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-turquoise" fill="currentColor" viewBox="0 0 20 20">
                <path d="M8 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM15 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"/>
                <path d="M3 4a1 1 0 00-1 1v10a1 1 0 001 1h1.05a2.5 2.5 0 014.9 0H10a1 1 0 001-1V5a1 1 0 00-1-1H3z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-earth-brown mb-2">Auto Insurance</h3>
            <p class="text-earth-brown/70">Protect your journey on and off the reservation with comprehensive auto coverage.</p>
          </div>
          
          <!-- Homeowners Insurance -->
          <div class="bg-soft-white rounded-lg p-6 shadow-soft hover:shadow-medium transition-shadow">
            <div class="w-12 h-12 bg-red-clay/20 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-red-clay" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-earth-brown mb-2">Homeowners Insurance</h3>
            <p class="text-earth-brown/70">Safeguard your home and the memories within, honoring the sacred space of family.</p>
          </div>
          
          <!-- Business Insurance -->
          <div class="bg-soft-white rounded-lg p-6 shadow-soft hover:shadow-medium transition-shadow">
            <div class="w-12 h-12 bg-sage/20 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-sage" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2H4zm3 5a1 1 0 011-1h4a1 1 0 110 2H8a1 1 0 01-1-1z" clip-rule="evenodd"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-earth-brown mb-2">Business Insurance</h3>
            <p class="text-earth-brown/70">Support your enterprise with coverage that understands traditional and modern businesses.</p>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Cultural Values Section -->
    <section class="section-spacing bg-turquoise/5">
      <div class="container-padding">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-earth-brown mb-6">
            The Spirit of the Navajo Code Talkers Guides Us Still
          </h2>
          <p class="text-lg text-earth-brown/80 mb-8 leading-relaxed">
            Our grandfathers spoke in sacred words, wrapped in the protection of Hózhó — harmony, balance, and beauty — to guide a nation through war and chaos. Today, we walk that same sacred path, helping our people navigate the storms and perils of modern life.
          </p>
          <div class="grid md:grid-cols-3 gap-8 mt-12">
            <div class="text-center">
              <div class="w-16 h-16 bg-turquoise/20 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-turquoise" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-earth-brown mb-2">Hózhó</h3>
              <p class="text-earth-brown/70">Balance & Harmony in every policy and relationship</p>
            </div>
            <div class="text-center">
              <div class="w-16 h-16 bg-red-clay/20 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-red-clay" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-earth-brown mb-2">K'é</h3>
              <p class="text-earth-brown/70">Kinship & Respect treating clients like family</p>
            </div>
            <div class="text-center">
              <div class="w-16 h-16 bg-sage/20 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-sage" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-earth-brown mb-2">Protection</h3>
              <p class="text-earth-brown/70">Safeguarding generations with sacred trust</p>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Resources Preview Section -->
    <BlogPreview 
      title="Wisdom & Resources"
      subtitle="Traditional knowledge meets modern protection - learn about insurance, benefits, and community resources"
      limit={3}
      showMore={true}
    />
    
    <!-- Contact Section -->
    <ContactForm 
      title="Walk with Us on Your Protection Journey"
      subtitle="Let our family help protect yours. Get a personalized quote that honors your needs and respects your values."
    />
  </main>
  
  <!-- Footer -->
  <Footer companyName="Diné Insurance" />
</BaseLayout>

<!-- SEO Schema Markup -->
<script type="application/ld+json" is:inline>
{
  "@context": "https://schema.org",
  "@type": "InsuranceAgency",
  "name": "Diné Insurance",
  "description": "Trusted insurance solutions for the Diné people. Protecting what matters. Honoring who you are.",
  "url": "https://dine-insurance.netlify.app",
  "telephone": "(928) 555-0123",
  "email": "info@dineinsurance.com",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Window Rock",
    "addressRegion": "AZ",
    "postalCode": "86515",
    "addressCountry": "US"
  },
  "areaServed": {
    "@type": "Place",
    "name": "Navajo Nation and surrounding areas"
  },
  "serviceType": [
    "Auto Insurance",
    "Homeowners Insurance",
    "Business Insurance",
    "Life Insurance",
    "Farm & Ranch Insurance",
    "Tribal Business Insurance"
  ],
  "sameAs": [
    "https://facebook.com/dineinsurance",
    "https://linkedin.com/company/dine-insurance"
  ]
}
</script>
